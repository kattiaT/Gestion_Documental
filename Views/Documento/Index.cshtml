@{
    ViewData["Title"] = "Gestión de Documentos";
}

<h1>Gestión de Documentos</h1>

@* Formulario para subir un documento *@
<form method="post" action="/Documento/SubirDocumento" enctype="multipart/form-data">
    <label for="documento">Seleccionar Documento:</label>
    <input type="file" id="documento" name="documento" required />
    <button type="submit">Subir Documento</button>
</form>

@* Mostrar datos del documento solo si el servidor ya mandó información en ViewBag *@
@if (ViewBag.Document != null)
{
    <h2>Documento Cargado:</h2>
    <div>
        <a href="@ViewBag.Document.Url" target="_blank">Ver Documento</a>
        <button onclick="editarDocumento('@ViewBag.Document.Id')">Editar Documento</button>
    </div>
}

@* Script con la función para redirigir al usuario a la acción Editar *@
<script>
    function editarDocumento(id) {
        // Lógica para editar el documento
        window.location.href = '/Documento/Editar/' + id;
    }
</script>
