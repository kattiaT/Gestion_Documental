@{
    ViewData["Title"] = "Documentos";
}

<h3>Documentos</h3>

<div class="mb-3">
    <form id="uploadForm" enctype="multipart/form-data">
        <input type="file" name="archivo" id="archivo" required />
        <button type="submit" class="btn btn-primary btn-sm">Subir</button>
        <a class="btn btn-outline-secondary btn-sm" asp-controller="Documento" asp-action="Logout">Cerrar sesión</a>
    </form>
</div>

<div class="row">
    <div class="col-md-5">
        <ul id="lista" class="list-group"></ul>
    </div>
    <div class="col-md-7">
        <iframe id="docViewer" style="display:none; width:100%; height:520px;" frameborder="0"></iframe>
    </div>
</div>

@section Scripts {
<script>
async function cargarLista() {
    const r = await fetch('/Documento/Listar');
    if (!r.ok) { alert(await r.text()); return; }
    const files = await r.json();

    const ul = document.getElementById('lista');
    ul.innerHTML = '';
    files.forEach(f => {
        const li = document.createElement('li');
        li.className = 'list-group-item list-group-item-action d-flex justify-content-between align-items-center';
        li.textContent = f.name;
        li.style.cursor = 'pointer';
        li.onclick = () => ver(f.id);
        ul.appendChild(li);
    });
}

function ver(id) {
    const iframe = document.getElementById('docViewer');
    iframe.src = `https://drive.google.com/file/d/${id}/preview`;
    iframe.style.display = 'block';
}

document.getElementById('uploadForm').addEventListener('submit', async function (e) {
    e.preventDefault();
    const fd = new FormData();
    fd.append('archivo', document.getElementById('archivo').files[0]);
    const resp = await fetch('/Documento/Subir', { method: 'POST', body: fd });
    if (!resp.ok) { alert("Error al subir: " + await resp.text()); return; }
    await cargarLista();
    const data = await resp.json();
    ver(data.id);
});

cargarLista(); // al cargar la página
</script>
}
