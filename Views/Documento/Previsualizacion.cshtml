@{
    var src = (string)ViewBag.Src;
    var titulo =  (string)ViewBag.Titulo;
    ViewData["Title"] = titulo;
}

<h2 class="mb-3">@titulo</h2>

<div style="height:75vh; border:1px solid #ddd; border-radius:8px; overflow:hidden;">
  <iframe src="@src" style="width:100%; height:100%; border:0;"
          allowfullscreen
          sandbox="allow-scripts allow-same-origin allow-forms allow-popups">
  </iframe>
</div>

<div class="mt-3">
  <a class="btn btn-secondary" asp-controller="Documento" asp-action="Index">Volver</a>
  <a class="btn btn-outline-primary" href="@src" target="_blank" rel="noopener">Abrir en pesta√±a nueva</a>
</div>